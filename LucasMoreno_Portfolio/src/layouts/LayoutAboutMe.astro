---
interface Props {
  title: string;
}
import Header from "../components/Header/Header.astro";
---

<!doctype html>
<html lang="es" class="scrollbar-hide">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <!-- <body class="h-screen w-screen bg-slate-900 bg-[radial-gradient(farthest-side,rgba(0,0,255,.1),rgba(255,255,255,0))] bg-fixed"> -->
  <body
    class="bg-gradient-to-t from-slate-950 via-blue-950 to-cyan-900 bg-fixed tracking-tighter leading-none"
  >



  <Header />
    <div class="flex justify-between pt-40 md:pt-60">
      <!-- Columna izquierda -->
      <div class="w-auto">
      </div>
      <!-- Columna del medio (grande) -->
      <div class="w-11/12">
        <slot />
      </div>
      <!-- Columna derecha -->
      <div class="w-auto">
      </div>
    </div>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;800&display=swap");
  body {
    font-family: "Poppins", sans-serif;
    word-spacing: 0.01rem
  }
</style>
