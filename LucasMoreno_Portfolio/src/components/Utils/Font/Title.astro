---
interface Props {
    title: string | never;
    logo?: string; // Nuevo par√°metro opcional para el logo
}

var { title, logo } = Astro.props;
---

<astro>
    <h1 class="text-3xl sm:text-4xl text-left font-extrabold tracking-tight text-gray-900 dark:text-white mb-4 flex items-center">
      {logo && <img src={logo} alt={`${title} logo`} class="ml-2 mr-4 h-8 w-auto filter dark:invert dark:brightness-0 dark:contrast-200"/>}
      {title}
    </h1>
</astro>
