---
export interface Props {
    link: string;
}

const { link } = Astro.props;
---

<astro>
    <a
        href={link}
        class="sm:my-6 sm:mx-3 sm:gap-4 md:my-8 md:mx-8 md:gap-4 grid grid-cols-10 rounded overflow-hidden hover:shadow-gray-600 hover:shadow-lg bg-slate-100 ease-in-out duration-300 sm:transform-none transform hover:-translate-y-1">
        <slot />
    </a>
</astro>
