---
export interface Props {
  link: string;
}
import { FiExternalLink } from "react-icons/fi";

const { link } = Astro.props;
---

<astro>
  <a
    href={link}
    class="relative sm:my-6 sm:mx-2 md:my-8 md:mx-3 lg:my-8 lg:mx-4 xl:my-8 xl:mx-8 2xl:my-8 2xl:mx-16 grid grid-cols-10 rounded overflow-hidden hover:shadow-gray-700 hover:shadow-lg bg-slate-100 ease-in-out duration-300 sm:transform-none transform hover:-translate-y-1"
  >
    <slot />
    <div class="absolute top-2 right-2 text-gray-400 pointer-events-none z-10 sm:text-base lg:text-lg xl:text-xl">
      <FiExternalLink />
    </div>
  </a>
</astro>
