---
import CardLink from "../Utils/Card/CardLink.astro";
import TextContent from "../Utils/Font/TextContent";
export interface Props {
    title: string;
    provider: string;
    description: string;
    tags: string[];
    date: string;
    logo: string;
}

const { title, provider, description, tags, date, logo } = Astro.props;
---

<astro>
    <CardLink
        link={`/certificado/${encodeURIComponent(title.replace(/\s+/g, "-"))}`}
    >
            <div class="col-span-7 items-center gap-6 px-6 ">
                <div class="py-4">
                    <h3 class="font-bold text-2xl mb-2">{title}</h3>
                    <p class="text-gray-400 text-base mb-2">
                        {provider} / {date}
                    </p>
                    <TextContent content={description} />
                </div>
                <div class="py-4">
                    {
                        tags.map((tag) => (
                            <span class="inline-block bg-gray-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                                {tag}
                            </span>
                        ))
                    }
                </div>
            </div>
        <div class="col-span-3 flex items-center justify-center py-4">
            <img
                src={logo}
                alt={title}
                class="object-cover max-w-[25%] h-auto"
            />
        </div>
    </CardLink>
</astro>
