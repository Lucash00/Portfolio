---
import CardLink from "../Utils/Card/CardLink.astro";
import TextContent from "../Utils/Font/TextContent";
export interface Props {
  title: string;
  briefDescription: string;
  description: string;
  tags: string[];
  projectUrl?: string;
  logo: string;
  media?: string[];
  startDate: string;
  endDate: string;
  company?: string;
}

const {
  title,
  briefDescription,
  description,
  tags,
  projectUrl,
  logo,
  media,
  startDate,
  endDate,
  company,
} = Astro.props;
---

<astro>
  <CardLink
    link={`/proyecto/${encodeURIComponent(title.replace(/\s+/g, "-"))}`}
  >
    <div
      class="sm:col-span-10 sm:mt-10 sm:mb-5 md:col-span-3 lg:col-span-2 xl:col-span-2 2xl:col-span-2 flex items-center justify-center"
    >
      <img
        src={logo}
        alt={title}
        class="object-cover sm:max-w-[35%] md:max-w-[50%] lg:max-w-[40%] xl:max-w-[40%] 2xl:max-w-[35%] h-auto"
      />
    </div>
    <div
      class="sm:px-3 sm:py-2 md:py-4 sm:border-t-2 md:border-l-2 sm:pt-4 sm:border-slate-200 md:px-6 sm:col-span-10 md:col-span-7 lg:col-span-8 xl:col-span-8 2xl:col-span-8"
    >
      <div class="font-bold sm:text-2xl md:text-3xl mb-2">{title}</div>
      <p class="text-gray-400 sm:text-sm md:text-base mb-2">
        {company ? company : "Autodidacta"} / {startDate} - {endDate}
      </p>
      <TextContent content={briefDescription} />
      {
        tags.map((tag) => (
          <span class="inline-block bg-gray-300 rounded-full sm:px-2 sm:py-1 md:px-3 md:py-1 sm:mr-1 sm:my-1 md:mr-2 md:my-2 sm:text-xs md:text-sm font-semibold text-gray-700 ">
            {tag}
          </span>
        ))
      }
    </div>
  </CardLink>
</astro>
