---
import CardLink from '../Utils/Card/CardLink.astro';
import TextContent from "../Utils/Font/TextContent";
export interface Props {
  title: string;
  briefDescription: string;
  description: string;
  tags: string[];
  projectUrl?: string;
  logo: string;
  media?: string[];
  startDate: string;
  endDate: string;
  company?:string;
}

const {
  title,
  briefDescription,
  description,
  tags,
  projectUrl,
  logo,
  media,
  startDate,
  endDate,
  company
} = Astro.props;
---

<astro>
  <CardLink link={`/proyecto/${encodeURIComponent(title.replace(/\s+/g, "-"))}`}>
      <div class="px-6 col-span-7">
          <div class="py-4">
              <div class="font-bold text-2xl mb-2">{title}</div>
              <p class="text-gray-400 text-base mb-2">
                {company ? company : "Autodidacta"} / {startDate} - {endDate}
              </p>
              <TextContent content={briefDescription} />
            </div>
          <div class="py-4">
              {
                  tags.map((tag) => (
                      <span class="inline-block bg-gray-300 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                          {tag}
                      </span>
                  ))
              }
          </div>
      </div>
      <div class="col-span-3 flex items-center justify-center">
          <img
              src={logo}  
              alt={title}
              class="object-cover max-w-[25%] h-auto"
          />
      </div>
  </CardLink>
</astro>
